<Window x:Class="DCS_SC_Bridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DCS-SC Bridge - Dashboard" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#333" Margin="0">
            <TextBlock Text="DCS-SC Bridge Dashboard" FontSize="22" FontWeight="Bold" Foreground="White" Margin="20"/>
        </StackPanel>

        <!-- Stats -->
        <StackPanel Grid.Row="1" Margin="20,10,20,10" Background="White">
            <Grid Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Status" FontWeight="Bold" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBlock x:Name="StatusText" Text="Stopped" FontSize="16" FontWeight="Bold" Foreground="#f44336"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Messages Received" FontWeight="Bold" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBlock x:Name="MessagesCountText" Text="0" FontSize="16" FontWeight="Bold" Foreground="#4CAF50"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Uptime" FontWeight="Bold" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBlock x:Name="UptimeText" Text="00:00:00" FontSize="16" FontWeight="Bold" Foreground="#2196F3"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Last Message" FontWeight="Bold" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBlock x:Name="LastMessageText" Text="None" FontSize="14" Foreground="#666"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Console/Logs -->
        <StackPanel Grid.Row="2" Margin="20,0,20,20">
            <TextBlock Text="Log Console" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="LogTextBox" 
                     Background="Black" 
                     Foreground="#00FF00" 
                     FontFamily="Consolas" 
                     FontSize="12" 
                     IsReadOnly="True" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="10" Height="302"/>
        </StackPanel>

        <!-- Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="20" HorizontalAlignment="Right">
            <Button x:Name="StartButton" Content="Start Listener" Click="StartButton_Click" Width="140" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
            <Button x:Name="StopButton" Content="Stop Listener" Click="StopButton_Click" Width="140" Height="40" Background="#f44336" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
            <Button x:Name="SettingsButton" Content="Settings" Click="SettingsButton_Click" Width="100" Height="40" Background="#2196F3" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
